Sub Caso2()
   '(1) Seleccion rango de celdas
    ' Cells.Select ' seleciona toda la hoja
     
    '(2) Selecciona un rango establecido
     Range("A1:D10").Select
     
    
    '(3) Selecciona una rango de celdas que contenga informacion
     Range("a1").Select
     Selection.CurrentRegion.Select
    
     
    
End Sub

